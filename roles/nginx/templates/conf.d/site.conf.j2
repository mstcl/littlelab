server {
	listen       80;
    server_name {{ item.server_url | default(expanded_url) }};
	set $domain_name {{ item.server_url | default(expanded_url) }};
	if ($http_host != $domain_name) {
		return 403;
	}
	root   /{{ item.mount_location | default(item.config_name) }};
	autoindex on;

	location / {
		try_files $uri $uri/ =404;
	}
}
