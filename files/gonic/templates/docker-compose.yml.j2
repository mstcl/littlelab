version: "{{ docker.compose_version }}"

networks:
  {{ docker.traefik_network }}:
    external: true

services:
  {{ service_directory }}:
    image: {{ image }}
    container_name: {{ service_directory }}
    restart: unless-stopped
    security_opt:
      - no-new-privileges
    networks:
      - {{ docker.traefik_network }}
    volumes:
      - {{ location.music }}:/music:ro
      - {{ location.docker_data }}/{{ service_directory }}/playlists:/playlists
      - {{ location.docker_data }}/{{ service_directory }}/podcasts:/podcasts
      - {{ location.docker_data }}/{{ service_directory }}/data:/data
      - {{ location.cache }}/{{ service_directory }}:/cache
    environment:
      TZ: "{{ base_timezone }}"
      GONIC_MUSIC_PATH: "/music"
      GONIC_SCAN_WATCHER_ENABLED: "True"
      GONIC_SCAN_AT_START_ENABLED: "True"
      GONIC_MULTI_VALUE_GENRE: "delim ;"
      GONIC_MULTI_VALUE_ALBUM_ARTIST: "delim ;"
      GONIC_LISTEN_ADDR: "0.0.0.0:4747"
