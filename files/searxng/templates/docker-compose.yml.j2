version: "{{ docker.compose_version }}"

networks:
  {{ docker.expose_network }}:
    external: true
  {{ network }}:
    internal: true

services:
  {{ service_directory }}:
    image: {{ image }}
    container_name: {{ service_directory }}
    restart: unless-stopped
    security_opt:
      - no-new-privileges
    networks:
      - {{ docker.expose_network}}
      - {{ network }}
    logging:
      driver: "json-file"
      options:
        max-size: "1m"
        max-file: "1"
    cap_drop:
      - ALL
    cap_add:
      - CHOWN
      - SETGID
      - SETUID
    volumes:
      - ./{{ config_file }}:/etc/searxng/{{ config_file }}:rw
      - ./limiter.toml:/etc/searxng/limiter.toml:ro
    depends_on:
      - {{ service_directory }}-redis
