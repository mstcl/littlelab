{
  hostname: "{{ expanded_url }}"
  bind: "0.0.0.0"
  port: 8536
  tls_enabled: true

  pictrs: {
    url: "http://pictrs:8080/"
    api_key: "{{ pictrs_api_key }}"
    image_mode: "None"
  }

  email: {
    smtp_server: "{{ smtp_host }}:465"
    smtp_login: "{{ smtp_sender }}"
    smtp_password: "{{ smtp_password }}"
    smtp_from_address: "{{ smtp_sender }}"
    tls_type: "tls"
  }

  database: {
    database: "{{ postgres_db }}"
    user: "{{ postgres_user }}"
    password: "{{ postgres_password }}"
    host: "lemmy-postgres"
    port: 5432
    pool_size: 5
  }
}
