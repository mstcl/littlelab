{
  hostname: "{{ expanded_url }}"
  bind: "0.0.0.0"
  port: 8536
  tls_enabled: true

  pictrs: {
    url: "http://pictrs:8080/"
    api_key: "{{ pictrs.api_key }}"
  }

  email: {
    smtp_server: "{{ smtp.host }}:465"
    smtp_login: "{{ smtp.sender }}"
    smtp_password: "{{ smtp.password }}"
    smtp_from_address: "{{ smtp.sender }}"
    tls_type: "tls"
  }

  database: {
    database: "{{ postgres.db }}"
    user: "{{ postgres.user }}"
    password: "{{ postgres.password }}"
    host: "lemmy-postgres"
    port: 5432
    pool_size: 5
  }
}
