version: "{{ docker.compose_version }}"

networks:
  {{ docker.traefik_network }}:
    external: true

services:
  {{ service_directory }}:
    image: {{ image }}
    container_name: {{ service_directory }}
    restart: unless-stopped
    security_opt:
      - no-new-privileges
    networks:
      - {{ docker.traefik_network}}
    volumes:
      - {{ location.files }}:/srv/sftpgo
      - {{ location.docker_data }}/{{ service_directory }}:/var/lib/sftpgo
    environment:
      - SFTPGO_WEBDAVD__BINDINGS__0__PORT=10080
      - SFTPGO_HTTPD__BINDINGS__0__ENABLE_WEB_CLIENT=false
      - SFTPGO_HTTPD__WEB_ROOT=/{{ url.path }}
    ports:
      - 2022:2022
