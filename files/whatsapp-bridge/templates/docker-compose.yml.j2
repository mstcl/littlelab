version: "{{ docker.compose_version }}"

networks:
  {{ network }}:
    external: true
  pg-net:
    external: true

services:
  {{ service_directory }}:
    image: {{ image }}
    container_name: {{ service_directory }}
    restart: unless-stopped
    security_opt:
      - no-new-privileges
    depends_on:
      - {{ service_directory }}-postgres
    volumes:
      - {{}}:/data:z
    networks:
      - {{ network }}
