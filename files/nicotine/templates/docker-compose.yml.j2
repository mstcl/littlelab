version: "{{ docker.compose_version }}"

networks:
  {{ docker.traefik_network }}:
    external: true

services:
  {{ service_directory }}:
    image: {{ image }}
    container_name: {{ service_directory }}
    restart: unless-stopped
    security_opt:
      - no-new-privileges
    networks:
      - {{ docker.traefik_network}}
    ports:
      - {{ io_port }}:{{ io_port }}
    volumes:
      - /usr/bin/curl:/usr/bin/curl
      - {{ location.downloads }}:/downloads
      - {{ location.music }}:/shares
      - ./{{ config_file }}:/root/.config/nicotine/config
      - ./utils:/utils
      - {{ location.docker_data }}/{{ service_directory }}:/root/.local/share/nicotine
    deploy:
      resources:
        limits:
          cpus: 0.5
          memory: 500mb
        reservations:
          memory: 100mb
    environment:
      DARKMODE: "false"
      LOGIN: "{{ user }}"
      PASSW: "{{ password }}"

