version: "{{ docker.compose_version }}"

networks:
  {{ docker.traefik_network }}:
    external: true

services:
  {{ service_directory }}:
    image: {{ image }}
    container_name: {{ service_directory }}
    restart: unless-stopped
    security_opt:
      - no-new-privileges
    networks:
      - {{ docker.traefik_network}}
    environment:
      APPLICATION_URL: "https://{{ expanded_url }}"
    volumes:
    - {{ location.docker_data}}/{{ service_directory }}:/app/data/state/
