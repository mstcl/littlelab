version: "{{ docker.compose_version }}"

services:
  {{ service_directory }}:
    image: {{ image }}
    container_name: {{ service_directory }}
    restart: unless-stopped
    privileged: true
    security_opt:
      - no-new-privileges
    network_mode: "host"
    user: 1000:1000
    volumes:
      - {{ location.docker_data }}/{{ service_directory }}:/data
    environment:
      COLOR: "light"
      IFACE: "enp2s0"
      LOGLEVEL: "short"
      THEME: "simplex"
      IGNOREIP: "yes"
      ARP_TIMEOUT: "600"
      TIMEOUT: "300"
      SHOUTRRR_URL: "telegram://{{ bot_token }}@telegram?chats={{ chat_id }}"
