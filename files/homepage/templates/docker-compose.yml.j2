version: "{{ docker.compose_version }}"

networks:
  {{ docker.traefik_network }}:
    external: true
  {{ network }}:
    internal: true
    attachable: false

services:
  {{ service_directory }}:
    image: {{ image }}
    container_name: {{ service_directory }}
    restart: unless-stopped
    security_opt:
      - no-new-privileges
    networks:
      - {{ docker.traefik_network }}
      - {{ network }}
    environment:
      PUID: 1000
      PGID: 1000
    mem_limit: 256M
    cpus: 0.50
    depends_on:
      - {{ service_directory }}-socket-proxy
    volumes:
      - ./config:/app/config
{% if volumes is defined and volumes | length > 0 %}
{% for item in volumes %}
      - {{ item }}:ro
{% endfor %}
{% endfor %}
{% endif %}

  {{ service_directory }}-socket-proxy:
    image: {{ socket.image }}
    container_name: homepage-socket-proxy
    restart: unless-stopped
    security_opt:
      - no-new-privileges
    networks:
      - {{ network }}
    environment:
      - CONTAINERS=1
      - SERVICES=1
      - TASKS=1
      - POST=0
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
