version: "{{ docker.compose_version }}"

networks:
  {{ docker.traefik_network }}:
    external: true

services:
  {{ service_directory }}:
    image: {{ service_image }}:{{ image_tag }}
    container_name: {{ service_directory }}
    restart: unless-stopped
    security_opt:
      - no-new-privileges
    networks:
      - {{ docker.traefik_network}}
    cap_drop:
      - ALL
    cap_add:
      - NET_BIND_SERVICE
      - CHOWN
      - SETGID
      - SETUID
      - SYS_ADMIN
      - AUDIT_WRITE
      - MKNOD
      - SYS_CHROOT
      - NET_RAW
      - SETFCAP
      - SYS_PTRACE
      - DAC_OVERRIDE
      - SETPCAP
    environment:
      DOMAIN: "https://{{ expanded_url }}"
      WEBSOCKET_ENABLED: "true"
      SMTP_HOST: "{{ smtp_host }}"
      SMTP_PORT: 465
      SMTP_FROM: "{{ smtp_sender }}"
      SMTP_SECURITY: "force_tls"
      SMTP_USERNAME: "{{ smtp_user }}"
      SMTP_PASSWORD: "{{ smtp_password }}"
    volumes:
        - {{ location.docker_data }}/{{ service_directory }}:/data
