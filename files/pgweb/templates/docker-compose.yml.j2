version: "{{ docker.compose_version }}"

networks:
  {{ docker.traefik_network }}:
    external: true
  {{ network }}:
    external: true

services:
  {{ service_directory }}:
    image: {{ image }}
    container_name: {{ service_directory }}
    restart: unless-stopped
    security_opt:
      - no-new-privileges
    networks:
      - {{ docker.traefik_network}}
      - {{ network }}
    cap_drop:
      - ALL
    cap_add:
      - CHOWN
      - SETGID
      - SETUID
      - FOWNER
      - DAC_OVERRIDE
    environment:
      PGWEB_URL_PREFIX: "{{ url.path }}"
    volumes:
      - ./bookmarks:/bookmarks
    entrypoint: ["/usr/bin/pgweb", "--bind=0.0.0.0", "--listen=8081", "--bookmarks-dir=/bookmarks"]
