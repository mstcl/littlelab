# The port to Listen on.
PORT: 8080

# The number of workers to use for the server
HTTP_WORKERS: 2

# Proxy
PROXY_PART: https://{{ urls['piped-proxy'].sub }}.{{ base_tld }}

# Outgoing HTTP Proxy - eg: 127.0.0.1:8118
#HTTP_PROXY: 127.0.0.1:8118

# Captcha Parameters
CAPTCHA_BASE_URL: https://api.capmonster.cloud/
CAPTCHA_API_KEY: INSERT_HERE

# Public API URL
API_URL: https://{{ expanded_url }}

# Public Frontend URL
FRONTEND_URL: https://{{ urls['piped-frontend'].sub }}.{{ base_tld }}

# Enable haveibeenpwned compromised password API
COMPROMISED_PASSWORD_CHECK: true

# Disable Registration
DISABLE_REGISTRATION: false

# Feed Retention Time in Days
FEED_RETENTION: 30

# Hibernate properties
hibernate.connection.url: jdbc:postgresql://{{ service_directory }}-postgres:5432/piped
hibernate.connection.driver_class: org.postgresql.Driver
hibernate.dialect: org.hibernate.dialect.PostgreSQLDialect
hibernate.connection.username: {{ docker_postgres_user }}
hibernate.connection.password: {{ docker_postgres_password }}

# frontend properties
frontend.statusPageUrl: https://{{ urls.tinystatus.sub }}.{{ base_tld }}
