version: "{{ docker.compose_version }}"

x-logging: &default-logging
  driver: "json-file"
  options:
    max-size: "50m"
    max-file: "4"

networks:
  {{ docker.traefik_network }}:
    external: true

services:
  {{ service_directory }}:
    image: {{ image }}
    container_name: {{ service_directory }}
    restart: unless-stopped
    security_opt:
      - no-new-privileges
    logging: *default-logging
    networks:
      - {{ docker.traefik_network }}
    volumes:
      - {{ location.docker_data }}/{{ service_directory }}:/config
    environment:
      PUID: 1000
      PGID: 150
      TZ: "{{ base_timezone }}"
    deploy:
      resources:
        limits:
          cpus: '0.50'
          memory: 1gb
        reservations:
          memory: 100mb
