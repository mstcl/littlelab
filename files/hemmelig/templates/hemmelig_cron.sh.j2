#!/bin/bash

set -e

cd {{ location.docker_data }}/{{ service_directory }}
mkdir -p {{ location.onsite_backups }}/{{ service_directory }}

bt=$(date '+%Y%m%d-%H%M')

sqlite3 db/hemmelig.db ".backup 'hemmelig-$bt.db'"

gzip hemmelig-$bt.db

mv hemmelig-$bt.db.gz {{ location.onsite_backups }}/{{ service_directory }}
