version: "{{ docker.compose_version }}"

x-logging: &default-logging
  driver: "json-file"
  options:
    max-size: "50m"
    max-file: "4"

networks:
  {{ docker.expose_network }}:
    external: true

services:
  {{ service_directory }}:
    image: {{ image }}
    container_name: {{ service_directory }}
    restart: unless-stopped
    security_opt:
      - no-new-privileges
    logging: *default-logging
    networks:
      - {{ docker.expose_network }}
    environment:
      USE_CUSTOM_CONFIG: "true"
    cap_drop:
      - SYS_ADMIN
      - AUDIT_WRITE
      - MKNOD
      - SYS_CHROOT
      - NET_RAW
      - SETFCAP
      - SYS_PTRACE
      - DAC_OVERRIDE
      - SETPCAP
    volumes:
      - {{ location.repos }}:/srv/git:ro
      - ./{{ config_file }}:/etc/cgitrc:ro
      - ./{{ css_file }}:/usr/share/webapps/cgit/style.css:ro
      - ./syntax-highlighting.py:/usr/lib/cgit/filters/syntax-highlighting.py:ro
      - ./favicon.ico:/usr/share/webapps/cgit/favicon_alt.ico:ro
      - ./header.html:/usr/lib/cgit/header.html:ro
      - ./about.html:/usr/lib/cgit/about.html:ro
