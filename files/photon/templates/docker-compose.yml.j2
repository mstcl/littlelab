version: "{{ docker.compose_version }}"

networks:
  {{ docker.traefik_network }}:
    external: true

services:
  {{ service_directory }}:
    image: {{ image }}
    container_name: {{ service_directory }}
    restart: unless-stopped
    security_opt:
      - no-new-privileges
    networks:
      - {{ docker.traefik_network }}
    environment:
{% if photon_options is defined and photon_options | length > 0 %}
{% for item in photon_options %}
{% for key, value in item.items() %}
      {{ key }}: "{{ value }}"
{% endfor %}
{% endfor %}
{% endif %}
