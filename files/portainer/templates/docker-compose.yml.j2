version: "{{ docker.compose_version }}"

networks:
  {{ docker.traefik_network }}:
    external: true
  {{ network }}:
    internal: true
    attachable: false
    ipam:
      config:
        - subnet: {{ ipam_subnet }}.0/24

services:
  {{ service_directory }}:
    image: {{ image }}
    container_name: {{ service_directory }}
    restart: unless-stopped
    security_opt:
      - no-new-privileges
    networks:
      {{ docker.traefik_network}}: {}
      {{ network }}:
        ipv4_address: {{ ipam_subnet }}.10
    depends_on:
      - {{ service_directory }}-socket-proxy
    mem_limit: 256M
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - {{ location.docker_data }}/{{ service_directory }}:/data
    ports:
      - 9001:9000

  {{ service_directory }}-socket-proxy:
    image: {{ socket.image }}
    container_name: {{ service_directory }}-socket-proxy
    restart: unless-stopped
    security_opt:
      - no-new-privileges
    networks:
      - {{ network }}
    read_only: true
    mem_limit: 64M
    cap_drop:
      - ALL
    user: 65534:973
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
    command:
      - '-loglevel=debug'
      - '-listenip=0.0.0.0'
      - '-allowfrom={{ ipam_subnet }}.10/32'
      - '-allowGET=.*'
      - '-allowHEAD=.*'
      - '-allowPOST=.*'
      - '-allowPUT=.*'
      - '-allowPATCH=.*'
      - '-allowDELETE=.*'
      - '-allowCONNECT=.*'
      - '-allowTRACE=.*'
      - '-allowOPTIONS=.*'
      - '-watchdoginterval=3600'
      - '-stoponwatchdog'
      - '-shutdowngracetime=5'
